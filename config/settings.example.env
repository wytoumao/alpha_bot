# Spug template send
SPUG_TEMPLATE_ID=
SPUG_TARGETS=09xxxxxxxx,09yyyyyyyy

# Logging
LOG_LEVEL=INFO

# Notification for TBA (no explicit time)
NOTIFY_TBA_ONCE=true
