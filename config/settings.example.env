# Alpha site & locale
ALPHA_URL=https://alpha123.uk/zh
LANGUAGE=zh
TIMEZONE=Asia/Taipei

# Reminder window and cadences
AHEAD_MINUTES=30
REMINDER_OFFSETS=20,5
QUIET_HOURS=00:00-07:30

# State storage
STATE_FILE=/data/alpha-state.json
STATE_TTL_HOURS=48

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=alpha
DB_PASSWORD=alpha_password
DB_NAME=alpha_bot
DB_POOL_MINSIZE=1
DB_POOL_MAXSIZE=5

# Scheduler
CRON_EXPRESSION=*/1 * * * *
