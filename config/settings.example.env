# Playwright
PLAYWRIGHT_PROXY=

# Spug configuration
SPUG_BASE_URL=https://push.spug.cc
SPUG_TOKEN=
SPUG_TIMEOUT_SECONDS=10
SPUG_QUIET_CHANNEL=sms

# Spug xsend
SPUG_XSEND_USER_ID=
